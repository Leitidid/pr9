<Window x:Class="pr9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr9"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="98.04"/>
            <RowDefinition Height="526.08"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Menu Margin="0,0,0,79" >
            <MenuItem Header="Файл" Height="19" Width="75">
                <MenuItem Header="О программе" Click="MenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Выход" Click="MenuItem_Exit"/>
            </MenuItem>
        </Menu>
        <TextBlock x:Name="txtOutput" TextWrapping="Wrap" Margin="10,49,362,18" Grid.Row="0" Grid.RowSpan="2"/>
        <TextBlock x:Name="txtOkadika"  Margin="501,49,10,18" Grid.Row="0"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Width="98">
            <Button Content="Показать данные" Click="ShowData_Click"/>
        </StackPanel>

    </Grid>
</Window>
